[core]
	editor = vim
	autocrlf = input
	safecrlf = warn
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	dt = difftool
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	type = cat-file -t
	dump = cat-file -p

[include]
        path = ~/.gitconfig_local
